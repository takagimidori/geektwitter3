<h1>GeekTwitter</h1>
<h3>Post詳細</h3>
<p>
    <strong>タイトル</strong>
    <%= @post.title %>
</p>
<p>
    <strong>時間</strong>
    <%= @post.start_time.strftime("%Y-%m-%d %H:%M") %>
</p>
<p>
    <strong>内容</strong>
    <%= @post.content %>
</p>

<% if user_signed_in? && current_user.id == @post.user_id %>
    <%= link_to "編集する", edit_post_path(@post.id) %>
    <%= link_to "削除する", post_path(@post.id), method: :delete %>
<% end %> 

</div>

<%= link_to "Tweet一覧に戻る", posts_path %>